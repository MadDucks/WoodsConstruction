<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



        <ImageView
        android:id="@+id/woods_construction"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="0dp"
        android:src="@drawable/woodsbroslogo" />


    <TextView
        android:id="@+id/where_text"
        android:text="@string/motto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light "
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:textStyle="italic"
        android:layout_below="@id/woods_construction"
        android:gravity="center"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/info_textext"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/learn_button"
        android:layout_marginTop="150dp"
        android:layout_marginStart="10dp"
        android:fontFamily="sans-serif-light "
        android:text="@string/contact"
        android:textColor="@android:color/black"
        android:textSize="22sp" />




    <Button
        android:id="@+id/learn_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#006400"
        android:layout_alignParentBottom="true"
        android:fontFamily="sans-serif-light "
        android:text="@string/learnmore"
        android:layout_gravity="center_horizontal"
        android:onClick="goToWoods"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textColorLink="@android:color/white"
        />

</RelativeLayout>